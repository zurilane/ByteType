            background-color: #f8f9fa;
        }
        h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 48px;
            display: inline-block;
            margin: 0;
            color: #333;
        }
        .alpha-badge {
            display: inline-block;
            background-color: gold;
            color: black;
            font-weight: bold;
            padding: 5px 10px;
            margin-left: 10px;
            border-radius: 5px;
            font-size: 16px;
            vertical-align: middle;
        }
        .text-container { 
            font-size: 20px; 
            margin: 20px 0; 
        }
        .input-box { 
            width: 100%; 
            padding: 10px; 
            font-size: 18px; 
        }
        .correct { 
            background-color: lightgreen; 
        }
        .error { 
            background-color: red; 
            color: white; 
        }
        .wpm, .accuracy { 
            font-weight: bold; 
            margin-top: 10px; 
        }
        select {
            font-size: 16px;
